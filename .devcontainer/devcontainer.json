// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "aa-microservice-template-python Docker Compose (Extend)",
	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../docker-compose.yml",
		"docker-compose.yml"
	],
	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "aa-microservice-template-python",
	// Mounts us used to mount a volume inside the container
	"mounts": [
		// Mount ssh local ssh keys to devcontainer. If you have your ssh credentials in another folder change the source dir.
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind"
	],
	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/app",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],
	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	// "shutdownAction": "none",
	// Uncomment the next line to run commands after the container is created.
	"postCreateCommand": "apk add git openssh && [ -f /root/.ssh/id_rsa ] && chmod 600 /root/.ssh/id_rsa && chmod 700 /root/.ssh",
	// apk add git openssh: Install git & openssh into the devcontainer
	// [ -f /root/.ssh/id_rsa ] && chmod 600 /root/.ssh/id_rsa && chmod 700 /root/.ssh: Check if exists ssh creadentials and assign them its chmod.
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker@1.29.3",
				"kisstkondoros.vscode-gutter-preview@0.31.2",
				"ms-python.debugpy@2024.12.0",
				"ms-python.vscode-pylance@2024.10.1",
				"ms-python.python@2024.16.1",
				"ms-python.pylint@2024.0.0",
				"ms-python.black-formatter@2024.4.0",
				"asyncapi.asyncapi-preview@0.6.3",
				"tal7aouy.icons@1.0.0",
				"github.github-vscode-theme@6.3.5"
			],
			"settings": {
				"workbench.iconTheme": "icons",
				"workbench.colorTheme": "GitHub Dark Dimmed",
				"python.formatting.provider": "black",
				"editor.formatOnSave": true,
				"python.formatting.blackArgs": [
					"--line-length",
					"120"
				],
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"editor.tabSize": 4,
					"editor.insertSpaces": true,
					"editor.renderIndentGuides": true,
					"editor.highlightActiveIndentGuide": true
				}
			}
		}
	}
	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer",
}